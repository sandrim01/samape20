{
    "name": "samapeop",
    "version": "1.0.0",
    "description": "Sistema de Gerenciamento de Manutenção de Maquinário Pesado",
    "main": "main.js",
    "bin": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win --x64",
        "build-portable": "electron-builder --win portable"
    },
    "keywords": [
        "maintenance",
        "management",
        "heavy-machinery"
    ],
    "author": "SAMAPEOP",
    "license": "ISC",
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.9.1",
        "rcedit": "^5.0.2"
    },
    "dependencies": {
        "@capacitor/android": "^8.0.2",
        "@capacitor/cli": "^8.0.2",
        "@capacitor/core": "^8.0.2",
        "@capacitor/ios": "^8.0.2",
        "astral-regex": "^2.0.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^2.2.2",
        "cors": "^2.8.6",
        "dotenv": "^17.2.4",
        "express": "^5.2.1",
        "jsonwebtoken": "^9.0.3",
        "node-fetch": "^2.7.0",
        "pg": "^8.18.0"
    },
    "pkg": {
        "assets": [
            "index.html",
            "styles.css",
            "app-web.js",
            "resources/**/*"
        ],
        "outputPath": "dist"
    },
    "build": {
        "appId": "com.samapeop.maintenance",
        "productName": "SAMAPEOP",
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "resources/icon.ico"
        },
        "portable": {
            "artifactName": "SAMAPEOP-Portable.exe"
        },
        "compression": "normal",
        "electronVersion": "27.0.0"
    }
}
