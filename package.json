{
    "name": "samapeop",
    "version": "1.0.0",
    "engines": {
        "node": ">=18.0.0"
    },
    "description": "Sistema de Gerenciamento de Manutenção de Maquinário Pesado",
    "main": "main.js",
    "bin": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "echo 'Build skiped for cloud deployment'",
        "build:electron": "electron-builder --win --x64",
        "build-portable": "electron-builder --win portable"
    },
    "keywords": [
        "maintenance",
        "management",
        "heavy-machinery"
    ],
    "author": "SAMAPEOP",
    "license": "ISC",
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.9.1",
        "rcedit": "^5.0.2"
    },
    "dependencies": {
        "@capacitor/android": "^5.7.0",
        "@capacitor/cli": "^5.7.0",
        "@capacitor/core": "^5.7.0",
        "@capacitor/ios": "^5.7.0",
        "astral-regex": "^2.0.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^2.2.2",
        "cors": "^2.8.6",
        "dotenv": "^17.2.4",
        "express": "^5.2.1",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.3",
        "node-fetch": "^2.7.0",
        "pg": "^8.18.0"
    },
    "pkg": {
        "assets": [
            "index.html",
            "styles.css",
            "app-web.js",
            "resources/**/*"
        ],
        "outputPath": "dist"
    },
    "build": {
        "appId": "com.samapeop.maintenance",
        "productName": "SAMAPEOP",
        "files": [
            "main.js",
            "preload.js",
            "www/**/*",
            "api-server.js",
            "resources/**/*",
            "package.json",
            "node_modules/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "resources/icon_fixed.ico"
        },
        "portable": {
            "artifactName": "SAMAPEOP-Portable.exe"
        },
        "compression": "maximum",
        "electronVersion": "27.0.0"
    }
}